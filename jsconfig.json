{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "checkJs": false,
    "maxNodeModuleJsDepth": 2,
    "experimentalDecorators": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "_archived",
    "_tests"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "@types/google-apps-script"
    ]
  }
}
